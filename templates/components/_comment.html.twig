<div class="mt-5">
    <div class="comment">

            {% for comment in post.comments %}

                <div class="comment flex justify-start mb-4 relative">

                    <div class="block p-6 rounded-lg shadow-lg bg-white">
                        <div class="md:flex md:flex-row">
                            <div class="md:w-96 w-24 flex justify-center items-center mb-6 lg:mb-0 mx-auto md:mx-0">
                                {% if comment.author.avatar %}
                                    <img class="w-1/2" src="{{ comment.author.avatar }}" alt="{{ comment.author }}'s avatar"/>
                                {% else %}
                                    <img src="https://yt3.ggpht.com/QAbtCWyrOI4SbZIqzQP7w8C9fWQhHfSg7UoIDUmDlOpVlkbvTuOJc8E-R8K8wh0Pe9Vki7VsOr8=s88-c-k-c0x00ffffff-no-rj"
                                         alt="Avatar">
                                {% endif %}
                            </div>
                            <div class="md:ml-6">
                                <p class="text-gray-500 font-light mb-6">
                                    {{ comment.content|raw }}
                                </p>
                                <p class="font-semibold text-xl mb-2 text-gray-800">{{ comment.author }}</p>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}

    </div>
</div>
